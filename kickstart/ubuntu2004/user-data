#cloud-config
autoinstall:
  version: 1
  locale: fr_FR
  keyboard:
    layout: en
    variant: us
  storage:
    layout:
      name: direct
  ssh:
    install-server: yes
    allow-pw: yes
  packages:
    - net-tools
  user-data:
    disable_root: false
    chpasswd:
      list: |
        root:root
      expire: false
    runcmd:
      - sed -i 's/#PermitRootLogin.*/PermitRootLogin yes/g' /etc/ssh/sshd_config
      - systemctl reload sshd
